# Configurações para Banco de Dados de Teste
# Sistema de Administração de Igreja

# Configurações do Servidor
NODE_ENV=test
PORT=3001
HOST=localhost

# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=igreja_admin
DB_USER=postgres
DB_PASSWORD=123456
DB_DIALECT=postgres

# Configurações JWT (para testes)
JWT_SECRET=jwt_secret_para_testes_123456789
JWT_REFRESH_SECRET=jwt_refresh_secret_para_testes_987654321
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Segurança (mais permissivas para testes)
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Configurações de Log (mais verboso para testes)
LOG_LEVEL=debug
LOG_FILE=logs/test.log

# Configurações de Teste
TEST_TIMEOUT=30000
TEST_DATABASE_URL=postgres://postgres:sua_senha_postgres@localhost:5432/igreja_admin
