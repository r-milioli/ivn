# =====================================================
# Configuração do Backend - Sistema Igreja Admin
# =====================================================

# Porta do servidor
PORT=3001

# Ambiente (development, production, test)
NODE_ENV=development

# =====================================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# =====================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=igreja_admin
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# URL completa do banco (alternativa)
# DATABASE_URL=postgresql://postgres:senha@localhost:5432/igreja_admin

# =====================================================
# CONFIGURAÇÃO DE AUTENTICAÇÃO
# =====================================================

# Chave secreta para JWT (gerar uma chave forte)
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_123456789

# Tempo de expiração do token (em segundos)
JWT_EXPIRES_IN=3600

# Tempo de expiração do refresh token (em segundos)
JWT_REFRESH_EXPIRES_IN=604800

# =====================================================
# CONFIGURAÇÃO DE EMAIL
# =====================================================

# SendGrid (recomendado para produção)
SENDGRID_API_KEY=sua_chave_sendgrid_aqui

# AWS SES (alternativa)
AWS_ACCESS_KEY_ID=sua_chave_aws_aqui
AWS_SECRET_ACCESS_KEY=sua_chave_secreta_aws_aqui
AWS_REGION=us-east-1

# SMTP (alternativa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app_aqui

# Email do remetente
FROM_EMAIL=noreply@igreja.com
FROM_NAME=Sistema Igreja Admin

# Emails dos administradores (separados por vírgula)
ADMIN_EMAILS=admin@igreja.com,secretario@igreja.com

# =====================================================
# CONFIGURAÇÃO DO FRONTEND
# =====================================================

# URL do frontend
FRONTEND_URL=http://localhost:5173

# =====================================================
# CONFIGURAÇÃO DE LOGS
# =====================================================

# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Diretório dos logs
LOG_DIR=./logs

# =====================================================
# CONFIGURAÇÃO DE SEGURANÇA
# =====================================================

# Taxa limite para login (tentativas por minuto)
LOGIN_RATE_LIMIT=5

# Taxa limite para solicitações de acesso (por hora)
REQUEST_RATE_LIMIT=3

# CORS - URLs permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =====================================================
# CONFIGURAÇÃO DE BACKUP
# =====================================================

# Backup automático (true/false)
AUTO_BACKUP=true

# Frequência do backup (cron expression)
BACKUP_CRON=0 2 * * *

# Diretório do backup
BACKUP_DIR=./backups

# =====================================================
# CONFIGURAÇÃO DE MONITORAMENTO
# =====================================================

# Health check (true/false)
HEALTH_CHECK=true

# Métricas (true/false)
METRICS_ENABLED=true

# =====================================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# =====================================================

# Seed do banco de dados (true/false)
SEED_DATABASE=false

# Logs detalhados (true/false)
VERBOSE_LOGS=true

# Mock de emails (true/false) - para desenvolvimento
MOCK_EMAILS=true

# =====================================================
# INSTRUÇÕES DE USO
# =====================================================

# 1. Copie este arquivo para .env
# 2. Preencha todas as variáveis necessárias
# 3. Para produção, use valores seguros
# 4. Nunca commite o arquivo .env no git
# 5. Para JWT_SECRET, use: openssl rand -base64 32